<section class="px-4 py-2">
  <h2 class="text-2xl font-thin py-2">註冊</h2>

  <form class="form-signin" action="/signup" method="POST">
    <div class="field"></div>
      <label class="block font-semibold" for="inputName">Name</label>
      <input type="text" name="name" class="px-3 py-2 text-lg border border-gray-400 rounded" required autofocus>
    </div>

    <div class="field"></div>
      <label class="block font-semibold" for="inputEmail">Email</label>
      <input type="text" name="email" class="px-3 py-2 text-lg border border-gray-400 rounded" required>
    </div>

    <div class="field"></div>
      <label class="block font-semibold" for="inputPassword">Password</label>
      <input type="password" name="password" class="px-3 py-2 text-lg border border-gray-400 rounded" required>
    </div>

    <div class="field"></div>
      <label class="block font-semibold" for="inputPasswordCheck">Password Check</label>
      <input type="password" name="passwordCheck" class="px-3 py-2 text-lg border border-gray-400 rounded" required>
    </div>

    <div class="actions mt-2">
      <button class="bg-gray-300 px-3 py-2 rounded" type="submit">Sign up</button>
    </div>
  </form>  
</section>